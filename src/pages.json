{
  // 组件自动导入
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui规则配置如下
      "^u-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^Xs(.*)": "@/components/Xs$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        // "navigationBarTextStyle": "white",
        "navigationStyle": "custom",
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    },
    {
      "path": "pages/column/column",
      "style": {
        "navigationBarTitleText": "精彩专栏"
      }
    },
    {
      "path": "pages/activity/activity",
      "style": {
        "navigationBarTitleText": "发起活动"
      }
    },
    {
      "path": "pages/activity/ActivitySignIn",
      "style":{
        "navigationBarTitleText": "活动签到"
      }
    },
    {
      "path": "pages/gift/gift",
      "style":{
        "navigationBarTitleText": "礼品中心"
      }
    },
    {
      "path": "pages/recommend/recommend",
      "style":{
        "navigationBarTitleText": "我要推荐"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  // 设置 TabBar
  "tabBar": {
    "color": "#333",
    "selectedColor": "#428ffb",
    "backgroundColor": "#fff",
    "borderStyle": "white",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/index/index",
        "iconPath": "static/bottomBar/home.png",
        "selectedIconPath": "static/bottomBar/active-home.png"
      },
      {
        "text": "发起活动",
        "pagePath": "pages/activity/activity",
        "iconPath": "static/bottomBar/activity.png",
        "selectedIconPath": "static/bottomBar/active-activity.png"
      },
      {
        "text": "精彩专栏",
        "pagePath": "pages/column/column",
        "iconPath": "static/bottomBar/horn.png",
        "selectedIconPath": "static/bottomBar/active-horn.png"
      },
      {
        "text": "个人中心",
        "pagePath": "pages/my/my",
        "iconPath": "static/bottomBar/personal.png",
        "selectedIconPath": "static/bottomBar/active-personal.png"
      }
    ]
  }
}